<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackLight"
    tools:context=".menu_principal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:background="@color/whiteDarck"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/txtMika"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:fontFamily="serif"
            android:text="MICA"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtPeluqueros"
            app:layout_constraintHorizontal_bias="0.833"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtPeluqueros"
            android:layout_width="135dp"
            android:layout_height="38dp"
            android:layout_marginEnd="972dp"
            android:text="peluqueros"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.643" />

        <TextView
            android:id="@+id/txtCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:text="ejemplo@gamil.com"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.636" />

        <TextView
            android:id="@+id/txtHola"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_marginEnd="2dp"
            android:text="Hola"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtCorreo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.692" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/b_FichasActivas"
        android:layout_width="376dp"
        android:layout_height="217dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="@color/grey"
        android:onClick="ir_fichas_activas"
        android:shape="rectangle"
        android:text="FICHAS ACTIVAS"
        android:textSize="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <Button
        android:id="@+id/b_CerrarSesion"
        android:layout_width="376dp"
        android:layout_height="217dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/grey"
        android:onClick="ir_cerrar_sesion"
        android:text="CERRAR SESION"
        android:textSize="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_FichasActivas"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/b_Sincronizar"
        android:layout_width="376dp"
        android:layout_height="217dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="172dp"
        android:backgroundTint="@color/grey"
        android:onClick="ir_sincronizar"
        android:text="SINCRONIZAR"
        android:textSize="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_NuevaFicha"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/b_NuevaFicha"
        android:layout_width="376dp"
        android:layout_height="217dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="172dp"
        android:backgroundTint="@color/grey"
        android:onClick="ir_agregar_usuario"
        android:text="NUEVA FICHA"
        android:textSize="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>