<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="vertical"
    android:padding="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:gravity="start">

        <TextView
            android:id="@+id/txt_DialogCabecera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="11dp"
            android:textStyle="bold"
            android:text="@string/cabeceraLinea"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/grey"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_Empleado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/empleado"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/spnEmpleado"
            android:layout_width="67dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:text="@string/codigo"
            android:textSize="20sp"
            style="@style/SpinnerStyle"
            android:textAllCaps="false"
            android:textColor="@color/grey" />

        <EditText
            android:id="@+id/edtxt_codEmpleado"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_edittext_bg"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/datosLinea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3,4,5,6">

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/grey">

                <TextView
                    android:id="@+id/txtServicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="Servicio"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtTipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Tipo"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtDescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="Descripción"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtBase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Base €"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtDescuento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Desc. %"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtIva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="Iva %"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="Total"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/grey">

                <Spinner
                    android:id="@+id/spnServicio"
                    android:layout_width="67dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:text="cod."
                    android:textSize="20sp"
                    style="@style/SpinnerStyle"
                    android:textAllCaps="false"
                    android:textColor="@color/grey" />

                <ImageView
                    android:id="@+id/imgTipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp" />


                <EditText
                    android:id="@+id/edtxtDescrpcion"
                    android:layout_width="275dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="" />

                <EditText
                    android:id="@+id/edtxtBaseE"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="numberDecimal"/>

                <EditText
                    android:id="@+id/edtxtDesc"
                    android:layout_width="110dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="numberDecimal"/>

                <EditText
                    android:id="@+id/edtxtIva"
                    android:layout_width="110dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/edtxtTotal"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="numberDecimal" />
            </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey">

            <TextView
                android:id="@+id/txtBlanco1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/espacio"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txtBlanco2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/espacio"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txtBlanco3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/espacio"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txtBlanco4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/espacio"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txtBlanco5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/espacio"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/b_cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:backgroundTint="@color/gris_oscuro_material"
                android:text="Cancelar"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/b_guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/verde_material"
                android:text="Guardar"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </TableRow>

    </TableLayout>

</LinearLayout>